<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_currency_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:layout_margin="16dp"/>
    
    <ImageView
        android:id="@+id/iv_currency_details"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="24dp"/>

    <EditText
        android:id="@+id/et_currency_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"/>

    <LinearLayout
        android:id="@+id/ll_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_vbdl_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_according_to_bdl"/>

        <TextView
            android:id="@+id/tv_real_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/price_according_to_bdl"/>

        <TextView
            android:id="@+id/tv_gap_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/price_according_to_bdl"/>

    </LinearLayout>

</LinearLayout>